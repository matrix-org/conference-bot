{
  "name": "conference-bot",
  "version": "0.1.0",
  "description": "Manages online virtual events",
  "main": "lib/index.js",
  "repository": "git@github.com:matrix-org/conference-bot.git",
  "author": "The Matrix.org Foundation C.I.C.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22"
  },
  "private": true,
  "scripts": {
    "start:bot": "pnpm run build:jsonschema && pnpm run build:ts && node --enable-source-maps lib/index.js",
    "start:web": "webpack serve",
    "watch:web": "webpack --watch",
    "build": "pnpm run build:jsonschema && pnpm run build:ts && pnpm run build:web",
    "build:jsonschema": "json2ts -i src/backends/json/jsonschemas/ -o src/backends/json/jsontypes/",
    "build:ts": "tsc",
    "build:web": "webpack",
    "run:merge-roles": "pnpm run build && node lib/scripts/merge-roles.js",
    "test": "jest src/__tests__",
    "test:e2e": "jest spec/"
  },
  "dependencies": {
    "matrix-bot-sdk": "git+https://github.com/element-hq/matrix-bot-sdk#rei/fd25_dms-catch",
    "await-lock": "^2.1.0",
    "config": "^3.3.3",
    "date-fns": "^4.1.0",
    "express": "^4.17.1",
    "fast-xml-parser": "^4.3.2",
    "hls.js": "^1.5.3",
    "irc-upd": "^0.11.0",
    "js-yaml": "^3.14.1",
    "jsrsasign": "^10.1.4",
    "liquidjs": "^9.19.0",
    "matrix-widget-api": "^1.6.0",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.1",
    "postcss-preset-env": "^6.7.0",
    "prom-client": "^15.0.0",
    "qs": "^6.11.2",
    "rfc4648": "^1.4.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node22": "^22.0.5",
    "@types/jest": "^29.2.5",
    "@types/node": "^22",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "homerunner-client": "^0.0.6",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.3.1",
    "json-schema-to-typescript": "^11.0.2",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "yaml": "^2.3.2"
  }
}
