    "json-schema-to-typescript": "^11.0.2",
    "postcss-loader": "^4.1.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.12.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  }
