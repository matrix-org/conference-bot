    "hls.js": "^0.14.17",
    "irc-upd": "^0.11.0",
    "js-yaml": "^3.14.1",
    "jsrsasign": "^10.1.4",
    "liquidjs": "^9.19.0",
    "matrix-bot-sdk": "^0.6.3",
    "matrix-widget-api": "^0.1.0-beta.11",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.1",
    "pg": "^8.9.0",
