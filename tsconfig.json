{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM", "es2022"],
    "noImplicitAny": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "outDir": "./lib",
    "isolatedModules": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
